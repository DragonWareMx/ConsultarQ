                                    tr
                                        td Usuarios
                                        td(class="uk-text-center")
                                            div()
                                                = list.uc
                                        td(class="uk-text-center")
                                            div()
                                                = list.ur
                                        td(class="uk-text-center")
                                            div()
                                                = list.uu
                                        td(class="uk-text-center")
                                            div()
                                                = list.ud
