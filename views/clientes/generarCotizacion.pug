extends ../main 

block head
    title ConsultarQ - Generar cotización
    link(rel="stylesheet" href="/stylesheets/others.css")
    <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
    
    
block content
    div(class="uk-container")
        div(class="uk-flex uk-flex-between uk-margin-top uk-flex-middle")
            div(class="uk-text-left  uk-text-large uk-text-bold uk-text-primary") Generar cotización
            div(class="uk-animation-toggle uk-margin-bottom" tabindex="0")
                a(href="javascript:history.back(-1);" class="uk-text-right uk-flex-inline uk-flex uk-flex-middle uk-link-muted uk-link-heading uk-animation-shake" style="color:#6B6B72 !important")
                    img(src="/icons/netGray.png" style="width:20px;height:20px;margin-top:3px" class="uk-margin-small-right")
                    div Regresar
        div(class="uk-card uk-card-default uk-card-body uk-width-1-1@m uk-margin-top uk-padding-small")
            div.uk-width-1-1.uk-flex.uk-flex-wrap
                div(class="uk-width-2-3@m uk-padding-small uk-padding-remove-bottom")    
                    .field.uk-margin-bottom
                        select(id="cliente" name="cliente" autocomplete='off' value='')
                            option(value="" disabled hidden selected ) Seleccionar
                            option(value="0") Cliente 1
                            option(value="1") Cliente 2
                        label(for='cliente' title='Cliente' data-title='Cliente')
                div(class="uk-width-1-3@m uk-padding-small uk-padding-remove-bottom")
                    .field.uk-margin-bottom 
                        input(type='date' autocomplete='off'  id="fecha_inicio" name="fecha_inicio"  onchange="this.setAttribute('value', this.value);" required)
                        label(for='fecha_inicio' title='Fecha inicio' data-title='Fecha inicio')
            
            div.uk-width-1-1.uk-flex.uk-flex-wrap
                div(class="uk-width-1-3@l uk-padding-small uk-padding-remove-top uk-padding-remove-bottom")    
                    .field.uk-margin-bottom
                        select(id="proyecto" name="proyecto" autocomplete='off' value='')
                            option(value="" disabled hidden selected ) Seleccionar
                            option(value="0") Proyecto 1
                            option(value="1") Proyecto 2
                        label(for='proyecto' title='Tipo de proyecto' data-title='Tipo de proyecto')
                div(class="uk-width-1-3@l uk-padding-small uk-padding-remove-top uk-padding-remove-bottom")    
                    .field.uk-margin-bottom
                        select(id="sub" name="sub" autocomplete='off' value='')
                            option(value="" disabled hidden selected ) Seleccionar
                            option(value="0") Subclasificación 1
                            option(value="1") Subclasificación 2
                        label(for='sub' title='Subclasificación' data-title='Subclasificación')
                div(class="uk-width-1-3@l uk-padding-small uk-padding-remove-top uk-padding-remove-bottom")  
                    .field.uk-margin-bottom
                        input(type='number' autocomplete='on' id="time" name="time"  step="1" min="0" value='' onchange="this.setAttribute('value', this.value);" required='')
                        label(for='time' title='Tiempo estimado (Meses)' data-title='Tiempo estimado')
            
            div.uk-width-1-1.uk-flex.uk-flex-wrap
                div(class="uk-width-1-3@m uk-padding-small uk-padding-remove-top uk-padding-remove-bottom") 
                    .field.uk-margin-bottom
                        input(type='number' autocomplete='on' id="participantes" name="participantes"  step="1" min="0" value='' onchange="this.setAttribute('value', this.value);" required='')
                        label(for='participantes' title='# Participantes' data-title='Participantes')
                div(class="uk-width-1-3@m uk-padding-small uk-padding-remove-top uk-padding-remove-bottom") 
                    .field.uk-margin-bottom
                        input(type='number' autocomplete='on' id="gastos" name="gastos"  step="100.00" min="0" value='' onchange="this.setAttribute('value', this.value);" required='')
                        label(for='gastos' title='Gastos extra' data-title='Gastos extra')

            div.uk-width-1-1.uk-padding-small.uk-padding-remove-top.uk-padding-remove-bottom
                div Requerimientos
                div(id="editor" style="resize:none !important") 
                script.
                    CKEDITOR.replace( 'editor' );
            div.uk-width-1-1.uk-padding-small.uk-padding-remove-bottom
                textarea(class="uk-textarea field uk-margin-bottom uk-text-emphasis textarea-caja" style="font-size:14px; border-radius:3px; height:100px !important" placeholder="Observaciones (Opcional)" autocomplete='on' id="observaciones" name="observaciones" value='' onchange="this.setAttribute('value', this.value);" required='')
            
            
            
            
            
            div(class="uk-width-1 uk-flex-right uk-flex uk-margin-top")
                button(class="uk-button uk-button-text uk-margin-medium-right uk-text-primary uk-text-capitalize" type="button" onclick="window.history.go(-1); return false;") Cancelar
                button(class="uk-button uk-button-primary uk-border-rounded uk-text-capitalize" id="btnEnviar" type="submit") Generar Excel
                