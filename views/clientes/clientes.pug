                                div(id="phone") 
                                    img(width="15" height="15" src="/icons/phone.png") 
                                    |&nbsp;4325980444
                                div(id="mail")
                                    img(width="15" height="15" src="/icons/mail.png") 
                                    |&nbsp;oskiq@micasa.mx
                                div(id="date-area") 
                                    img(class="uk-padding-right-small" width="15" height="15" src="/icons/dateGray.png")
