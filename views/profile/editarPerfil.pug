extends ../main

block head
    title ConsultarQ - Editar perfil

block content
    div(class="uk-container")
        div(class="uk-flex uk-flex-between uk-margin-top uk-flex-middle")
            div(class="uk-text-left  uk-text-large uk-text-bold uk-text-primary") Editar perfil
            a(class="uk-text-right uk-flex-inline uk-flex uk-flex-middle uk-text-muted uk-link-heading")
                img(src="/img/iconos/netGray.png" style="width:20px;height:20px" class="uk-margin-small-right") 
                div Regresar
        div(class="uk-card uk-card-default uk-align-center uk-margin-top")
            form(class="uk-card-body uk-flex uk-flex-center uk-flex-wrap" action="" method="")
                div(class="uk-width-auto@m uk-flex uk-flex-center uk-margin-small-bottom") 
                    img(src="/img/iconos/default.png" alt=":c" class="uk-border-circle uk-margin-auto" style="width:200px;height:200px; background-size:cover; object-fit:cover;")
                div(class="uk-width-expand@m uk-padding-small uk-padding-remove-vertical")
                    div(class="uk-text-left uk-text-primary uk-margin-bottom") DATOS GENERALES
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Nombre
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Teléfono
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Ciudad
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Estado
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Colonia
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Calle
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") No. Interior
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") No. Exterior
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Correo electrónico
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" placeholder="" autocomplete="off" type="email")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle uk-text-small")
                        a(href="javascript:mostrar();" class="uk-width-1-1 uk-flex uk-flex-middle" id="button-edit") 
                            img(src="/img/iconos/edit.png" class="uk-flex" style="width:12px; height:12px; margin-right:5px")
                            |Editar contraseña
                    div(class="uk-flex uk-flex-wrap uk-flex-middle" id="div-edit" uk-drop="animation: uk-animation-slide-top-small; duration: 1000")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Contraseña actual
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" type="password"  autocomplete="off")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle" id="div-edit")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Nueva contraseña
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" type="password" placeholder="Mínimo 8 caracteres" autocomplete="off")
                    div(class="uk-flex uk-flex-wrap uk-flex-middle"  id="div-edit")
                        div(class="uk-width-1-3@l uk-margin-small-bottom") Confirmar contraseña
                        div(class="uk-width-2-5@l uk-margin-small-bottom")
                            input(class="uk-input uk-form-small uk-text-emphasis" type="password" placeholder="Mínimo 8 caracteres" autocomplete="off")
                div(class="uk-width-1 uk-flex-right uk-flex")
                    button(class="uk-button uk-button-text uk-margin-medium-right uk-text-primary uk-text-capitalize") Cancelar
                    button(class="uk-button uk-button-primary uk-border-rounded uk-text-capitalize" type="submit") Guardar
    script.
        function mostrar() {
            alert("SSSSSS");
            div = document.getElementById('div-edit');
            but1 = document.getElementById('button-edit')
            but1.style.display = 'none';
            div.style.display = 'block';
        }

        function cerrar() {
            div = document.getElementById('div-edit');
            but1 = document.getElementById('button-edit')
            but1.style.display = 'block';
            div.style.display = 'none';
        }